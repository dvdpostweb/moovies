<div class="container white-bck">
  <% if params[:renew_subscription_error].present? && params[:renew_subscription_error] == "true" %>
  <div class="alert alert-danger">
    <strong><%= t('streaming_products.renew_subscription_error') %></strong>
  </div>
  <% end %>
  <h1 class="light-blue">Plush Illimit√©</h1>
  <div class="block100 marb20 padt20 charts-top">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 charts-buttons left-promo-code">
      <% if params[:subscription_action].present? && params[:subscription_action] == "subscription_change" %>
          <%= link_to t('info.index.price_public.choose_svod_tvod').html_safe, info_path(:page_name => t('routes.infos.params.alacarte'), :subscription_action => "subscription_change"), :class => "btn green-bck OpenSansCondensed f23 block100", :id => "button-la-carte" %>
      <% else %>
          <%= link_to t('info.index.price_public.choose_svod_tvod').html_safe, info_path(:page_name => t('routes.infos.params.alacarte')), :class => "btn green-bck OpenSansCondensed f23 block100", :id => "button-la-carte" %>
      <% end %>

      <% if params[:subscription_action].present? && params[:subscription_action] == "subscription_change" %>
          <%= link_to t('info.index.price_public.choose_svod_adult').html_safe, info_path(:page_name => "adult", :subscription_action => "subscription_change"), :class => "btn violet OpenSansCondensed f23 block100", :id => "button-18-plus" %>
      <% else %>
          <%= link_to t('info.index.price_public.choose_svod_adult').html_safe, info_path(:page_name => "adult"), :class => "btn violet OpenSansCondensed f23 block100", :id => "button-18-plus" %>
      <% end %>
    </div>
  </div>
  <div class="planSelectionContainer">
    <div class="planTable">
      <div class="headerRow show" id="header-chart">
        <div class="columnHeader"></div>
        <div class="cell selected pt-header-with-border">
          <div>
            <div class="selborder">
              <div class="cellContent" data-box-order="3"><%= t('info.index.price_public.choose_svod_plan_one').html_safe %></div>
            </div>
            <div class="arrow"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="planTable planTableOptions">
      <div class="alt"><%= t('info.index.price_public.svod_line_one').html_safe %> (<%= 1.month.from_now.strftime("%d/%m/%Y") %>)</div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_line_one').html_safe %> (<%= 1.month.from_now.strftime("%d/%m/%Y") %>)</div>
        <div class="cell bodyCell selected">EUR 9.99</div>
      </div>
      <div class="alt"><%= t('info.index.price_public.svod_line_two').html_safe %></div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_line_two').html_safe %></div>
        <div class="cell bodyCell icon-plainCheck selected"></div>
      </div>
      <div class="alt"><%= t('info.index.price_public.svod_access_devices').html_safe %></div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_access_devices').html_safe %></div>
        <div class="cell bodyCell icon-plainCheck selected"></div>
      </div>
      <div class="alt"><%= t('info.index.price_public.svod_simultaneus').html_safe %></div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_simultaneus').html_safe %></div>
        <div class="cell bodyCell selected"><%= t('customers.show.old_pricing.unlimited') %></div>
      </div>
      <div class="alt"><%= t('info.index.price_public.svod_cancellable').html_safe %></div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_cancellable').html_safe %></div>
        <div class="cell bodyCell icon-plainCheck selected"></div>
      </div>
      <div class="alt"><%= t('info.index.price_public.svod_access_alacarte_text').html_safe %>
        <%= link_to t('info.index.price_public.svod_access_alacarte_link').html_safe, info_path(:page_name => t('routes.infos.params.alacarte')), :class => "green" %>
      </div>
      <div class="row">
        <div class="columnHeader"><%= t('info.index.price_public.svod_access_alacarte_text').html_safe %>
          <%= link_to t('info.index.price_public.svod_access_alacarte_link').html_safe, info_path(:page_name => t('routes.infos.params.alacarte')), :class => "green" %>
        </div>
        <div class="cell bodyCell selected icon-plainCheck"></div>
      </div>
    </div>
    <div class="block100 padlr10 normal mart15 f14">
      <%= t('info.index.price_public.svod_explanation_1').html_safe %>, <strong><%= link_to t('info.index.price_public.choose_svod_explanation_link').html_safe, info_path(:page_name => t('routes.infos.params.vod')), :id => :multi %></strong>. <%= t('info.index.price_public.svod_explanation_2').html_safe %>.
    </div>
    <div class="block100 mart15 padlr15">

      <% if params[:subscription_action].present? && params[:subscription_action] == "subscription_change" %>
        <%= link_to(t('info.index.price_public.svod_button').html_safe, api_v1_subscriptions_path( :code => "SVOD" ), :class => "btn pad10 f20 light-blue-bck", :id => "continue-package") %>
      <% else %>
        <%= link_to(t('info.index.price_public.svod_button').html_safe, new_customer_session_path( :code => "SVOD" ), :class => "btn pad10 f20 light-blue-bck", :id => "continue-package") %>
      <% end %>

    </div>
    <div class="block100 padlr15"><%= t('info.index.price_public.svod_support_info').html_safe %></div>
    <div class="block100 padlr15 mart15 marb30">
      <%= link_to t('info.index.price_public.svod_conditions').html_safe, info_path(:page_name => t('routes.infos.params.conditions')) %>
    </div>
  </div>
</div>
