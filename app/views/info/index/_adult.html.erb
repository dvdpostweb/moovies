<% if current_customer && !current_customer.payable? && current_customer.step != 90 %>
<% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "empty-payment" %>
<% end %>

<div class="main">

        <div class="example-wrapper clearfix">
          <h3><%= t('info.index.price_public.only_tel_no_cc').html_safe %></h3>
          <div class="demo-wrapper">
            <%= link_to t('info.index.price_public.payment_method_change'), edit_customer_payment_methods_path(:customer_id => current_customer.to_param, :type => :credit_card), :class => :modern %>
          </div>
        </div>
</div>
  
  <% elsif current_customer && current_customer.promo_id == 10 && current_customer.step != 90  #samsung %>
    <h3><%= t('info.index.price_public.only_tel_samsung').html_safe %></h3>
  <% elsif current_customer && current_customer.locked == 1 && current_customer.step != 90  %>
    <p><%= t('info.index.price_public.locked', :default => 'Vous avez déjà changer votre abo ce mois attendez le %{next_reconduction_at} pour changer à nouveau. <br /> Vous serez reconduit sur cet abo : %{abo}', :next_reconduction_at => current_customer.subscription_expiration_date ? current_customer.subscription_expiration_date.strftime("%d/%m/%Y") : '', :abo => current_customer.next_subscription_type.description ).html_safe %></p>
<% else %>
  <% abo = current_customer ? current_customer.next_abo_type_id : 6 %>
  <% content_for :view_specific_css do %>
    <%= stylesheet_link_tag "adult" %>
  <% end %>
  <div class="alacarte">
	<div class="header-nav">
		<label><%= t('info.index.price_public.choose_adult_adult').html_safe %></label>
		<ul>
			<li class="plush"><%= link_to t('info.index.price_public.choose_adult_tvod').html_safe, info_path(:page_name => t('routes.infos.params.alacarte')), :id => 'abo', :class => params[:page_name] == 'abo' ? :active : :inactive %></li>
			<li class="eighteen"><%= link_to t('info.index.price_public.choose_adult_svod').html_safe, info_path(:page_name => "unlimited"), :id => 'unlimited', :class => params[:page_name] == 'unlimited' ? :active : :inactive %></li>
