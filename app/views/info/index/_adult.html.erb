			<li class="">
				<label class="list-text"><%= t('info.index.price_public.adult_simultaneus').html_safe %></label>
				<label class="list-number">illimité</label>
			</li>
			<li class="">
				<label class="list-text"><%= t('info.index.price_public.adult_cancellable').html_safe %></label>
				<label class="list-number"><%= image_tag "adult/ok-violet.png" %></label>
			</li>
		</ul>
	</div>
	
	<div class="footer-block">
		<div class="description-block"><%= t('info.index.price_public.adult_explanation_1').html_safe %>, <%= link_to t('info.index.price_public.adult_explanation_link').html_safe, info_path(:page_name => t('routes.infos.params.vod')), :id => :multi %>. 
									   <%= t('info.index.price_public.adult_explanation_2').html_safe %>.
		</div>
		<button><%= link_to t('info.index.price_public.adult_button').html_safe, customers_reactive_path( :code => "SVOD_ADULT" ) %></button>
		<div class="description-block description-block-main"><%= t('info.index.price_public.adult_support_info').html_safe %></div>
		<div class="description-block"><%= link_to t('info.index.price_public.adult_conditions').html_safe, info_path(:page_name => t('routes.infos.params.conditions')) %></div>
