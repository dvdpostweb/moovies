<div style='height:75px;width:970px'>
  <div style='margin: 15px 0pt; text-align: center;'><%= t '.redirection' %></div>
  <div style='width: 32px; height: 32px; margin: 6px auto;'>
    <%= image_tag 'loading.gif', :title => 'loading' %>
  </div></div>
<form name="checkout_confirmation" id="checkout_confirmation" method="post" action="https://secure.ogone.com/ncol/<%= Moovies.ogone_url[Rails.env] %>/orderstandard.asp">
<input type="hidden" name="prod" value="">
<input type="hidden" name="orderID" value="<%= @order_id %>">
<input type="hidden" name="pspid" value="<%= Moovies.ogone_pspid[Rails.env] %>">
<input type="hidden" name="currency" value="EUR">
<input type="hidden" name="language" value="<%= @ogone_language %>">
<input type="hidden" name="amount" value="<%= (@price*100).to_i %>">
<input type="hidden" name="SHASign" value="<%= @hash %>">

<% if !@brand.nil? %>
<input type="hidden" name="PM" value="CreditCard">
<input type="hidden" name="BRAND" value="<%= @brand %>">
<% end %>
</form>