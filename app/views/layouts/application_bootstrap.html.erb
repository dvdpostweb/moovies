<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Plush" %></title>
    <%= csrf_meta_tags %>
    <%= include_gon(namespace: 'Plush') %>
    <%= Gon::Base.render_data %>
    <% Gon.global.current_customer = current_customer if !customer_signed_in? %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
    <link rel="stylesheet" href="http://cdn.codepop.biz/plush/ft/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://cdn.codepop.biz/plush/ft/assets/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://cdn.codepop.biz/plush/ft/assets/css/form-elements.css">
    <link rel="stylesheet" href="http://cdn.codepop.biz/plush/ft/assets/css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
