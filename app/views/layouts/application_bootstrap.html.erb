    <![endif]-->

    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="http://cdn.codepop.biz/plush/ft/assets/ico/favicon.png">
    <link rel="http://cdn.codepop.biz/plush/ft/assets/apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
