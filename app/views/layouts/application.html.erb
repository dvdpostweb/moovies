<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
  <head>
    <title>
      <%= h yield(:title).blank? ? t('.title') : yield(:title) %>
    </title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <%= favicon_link_tag "favicon.ico" %>
  	<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300italic,700' rel='stylesheet' type='text/css' />
	  <%= javascript_include_tag "application" %>
	  <%= javascript_include_tag "jquery.ui.datepicker-#{I18n.locale}" %>
    
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= @body_id %>" class="<%= params[:kind] %> <%= current_customer ? :private : :public %>">
    <% if current_customer && current_customer.suspended? %>
    <div id='p_suspended'>
      <ul id='suspended'>
        <li><%= current_customer.suspended_notification %></li>
      </ul>
    </div>
    <% end %>
    <%= render(:partial => 'layouts/header') %>
    <div class="container clearfix">
      <% if !current_customer && (params[:controller] != 'home' && params[:page_name] != 'abo') %>
      <div class="osc fr" id="subscribe-wrap">
        <div class="wrap"><h3><%= t('.promo_title').html_safe %></h3>
          <div id="promo"><%= t('.promo') %></div>
        </div>
        <div id="subscribe">
          <a class="btn" href="http://www.dvdpost.be/step1.php?language=fr"><%= t('.abo') %></a>
          <p><%= t('.abo_text')%></p>
        </div>
      </div>
      <% end %>
      <%= yield %>
    </div>
    <!--   ==============   FOOTER   ==============   -->
    <div id="footer" >
      <div class="wrap">
      </div>
    </div>
       <!--   ==============   END FOOTER   ==============   -->
    
  </body>
</html>
