        <% else %>
            <%= react_component("PromoImageAdult", {image: "http://staging.plush.be/assets/promo_banner/adult1.jpg", btn: t('orange_promo_banner_btn'), text: t('orange_promo_banner_text_adult')}) %>
        <% end %>
    <% end %>
<% end %>