<% unless customer_signed_in? %>
    <% if params[:controller] == "products" %>
        <% if params[:kind] == :normal %>
            <%= react_component("PromoNormal", {image: "http://staging.plush.be/assets/promo_banner/normal1.jpg", text: t('orange_promo_banner_text_normal')}) %>
        <% else %>
            <%= react_component("PromoAdult", {image: "http://staging.plush.be/assets/promo_banner/adult2.jpg", text: t('orange_promo_banner_text_adult')}) %>
        <% end %>
    <% end %>
<% end %>