<div id="top" class="<%= "promo" if !current_customer && cookies['url_promo'] %>">
  <div class="wrap">
    <% if current_customer %>
      <%= link_to t('.compte'), customer_path(:id => current_customer) %>
      <%= "#{link_to t('.logout'), destroy_customer_session_path, :id => :logout, :method => :delete} <span>(#{current_customer.email})</span>".html_safe %>
    <% else %>
    &nbsp;
    <% end %>
  </div>
</div>
<ul id="lang">
  <li><%= link_to t('.conditions'), info_path(:page_name => t('routes.infos.params.privacy')) unless current_customer %></li>
  <%= switch_locale_link(params) %>
  <li class="wrap">
    <% if !current_customer %>
      <%= link_to "Login with Facebook", '/auth/facebook/', :class => 'btn-auth btn-facebook', :id => :login_fb %>
      <%= link_to t('.login'), new_customer_session_path, :id => :login %>
    <% end %>
  </li>
</ul>
<div id="wrap"> 
  <% if current_customer && current_customer.tvod_free > 0 && params[:controller] != 'steps' %>
  <div class='flash_message'>
    <div class="notice">
      <%= t('.tvod_free', :tvod_free => current_customer.tvod_free).html_safe %>
    </div>
  </div>
  <% end %>
  <% if flash[:notice] %>
	<div class='flash_message'>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
	</div>
  <% end %>
  <% if flash[:error] || flash[:alert]%>
	<div class='flash_message'>
    <div class="flash_error">
      <%= flash[:error] %><%= flash[:alert] %>
    </div>
	</div>
  <% end %>
  
  <!--   ==============   HEADER   ==============   -->
  <div id="header" >
    <div><%= link_to t('.tagline'), root_localize_path, :class => 'f-btn' %></div>
    <%= render :partial => 'layouts/menu' %>
  </div>
  <!--   ==============   END HEADER   ==============   --> 
