<div id="top" class="<%= "promo" if !current_customer && cookies['url_promo'] %>">
  <div class="wrap jcl">
    <% if current_customer %>
      <% unless params[:controller] == "steps" %>
        <%= link_to t('.compte'), customer_path(:id => current_customer) %>
        <%= "#{link_to t('.logout'), destroy_customer_session_path, :id => :logout, :method => :delete} <span>(#{current_customer.email})</span>".html_safe %>
      <% end %>
    <% else %>
    &nbsp;
    <% end %>
  </div>
</div>
<ul id="lang">
  <li><%= link_to t('.conditions'), info_path(:page_name => t('routes.infos.params.privacy')) unless current_customer %></li>
  <%= switch_locale_link(params) %>
  <li class="wrap">
    <% if !current_customer %>
      <%= link_to t('.login'), new_customer_session_path, :id => :login %>
      <%= link_to t('.social.network.fbconnect'), '/auth/facebook/', :class => 'btn-auth btn-facebook', :id => :login_fb %>
    <% end %>
  </li>
</ul>
<div id="wrap">

<% if customer_signed_in? %>
    <% unless params[:controller] == "payment_methods" || params[:controller] == "steps" || (params[:controller] == "home" && params[:action] == "carrefour") %>
      <%= render partial: "layouts/green_banner" %>
    <% end %>
  <% end %>

  <!--   ==============   HEADER   ==============   -->
  <div id="header" >
    <div><%= link_to t('.tagline'), root_localize_path, :class => 'f-btn' %></div>
    <%= render :partial => 'layouts/menu' %>
  </div>
  <!--   ==============   END HEADER   ==============   -->
