            if (Modernizr.mq('(min-width: 981px)')) {
                popoverTrig();
                fancyboxBinder();
            }
            if (Modernizr.mq('(max-width: 980px)')) {
                $('.popper').popover('destroy');
                fancyboxUnBinder();
            }
