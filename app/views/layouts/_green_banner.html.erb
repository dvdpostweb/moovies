<style type="text/css">
  #promotion-error {
    color: #B22222;
  }
</style>
<div class="greenBanner">
  <div class="greenBannerTop">
    <div>
      <%= image_tag("greenBannerLine.png", alt: "line", class: '_toggleImage1_') %>
      <%= image_tag("greenBannerPhone.png", alt: "line", class: '_toggleImage2_') %>
      <a href="#" class='greenToggle'>
        <span class="_toggleSpan1_ _underline_">(<%= t('.close_banner') %>)</span>
        <span class="_toggleSpan2_">(<%= t('.open_banner') %>)</span>
      </a>
    </div>
    <div>
      <% if current_customer.abo_subscriber? || current_customer.plush_la_carte_subscriber? || current_customer.unlimted_subscriber? %>
        <h2><%= t('.top_part_1') %> <span class="_bold_"><%= current_customer.tvod_free %>	<%= t('.top_part_2') %></span> <a href="#" class='greenToggle'>(<%= t('.details') %>)</a>
        </h2>
      <% elsif current_customer.mobistar_subscriber? %>
        <h2><%= t('.top_part_1') %> <span class="_bold_"><%= current_customer.tvod_free / 3 %>  <%= t('.top_part_2_6') %></span> <a href="#" class='greenToggle'>(<%= t('.details') %>)</a>
        </h2>
      <% end %>

    </div>
    <div>
      <!--
        <div class="greenBannerInlineBlock">	Vous êtes 	client Delhaize?<br>
          <a href="#" class='_underline_'>Cliquez ici</a>
        </div>
        <@%= image_tag("greenBannerLion.png", alt: "lion", class: 'greenBannerInlineBlock') %>
        -->
    </div>
  </div>

  <div class="greenBannerOpen">
    <div>
    <% product = Product.find_by_products_title(current_customer.customers_abo_type) %>
      <% if current_customer.abo_subscriber? %>
        <ul>
          <li><a href="#" class='_blueColor_ _underline_ abo_subscriber'>Plush à la Carte</a></li>
          <li><%= t('.top_part_2').capitalize %>: <%= current_customer.tvod_free %></li>
          <% if current_customer.tvod_free == 0 %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= t('.subscription_info') %></span>
            (<%= link_to t('.subscribe'), info_path(:page_name => t('routes.infos.params.unlimited')), class: '_blueColor_ _underline_' %>)</li>
          <% else %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= product.products_title %></span>
            <!--<a href="#" class='_blueColor_ _underline_'>(souscrire)</a>--></li>
          <% end %>
        </ul>
      <% elsif current_customer.mobistar_subscriber? %>
        <ul>
          <li><a href="#" class='_blueColor_ _underline_ abo_subscriber'>Plush à la Carte</a></li>
          <li><%= t('.top_part_2_6').capitalize %>: <%= current_customer.tvod_free / 3 %></li>
          <% if current_customer.tvod_free == 0 %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= t('.subscription_info') %></span>
            (<%= link_to t('.subscribe'), info_path(:page_name => t('routes.infos.params.alacarte')), class: '_blueColor_ _underline_' %>)</li>
          <% else %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= product.products_title %></span>
            <!--<a href="#" class='_blueColor_ _underline_'>(souscrire)</a>--></li>
          <% end %>
        </ul>
      <% end %>
      <% if current_customer.unlimted_subscriber? %>
        <ul>
          <li><a href="#" class='_greenColor_ _underline_ unlimited_subscriber'>Plush Unlimited</a></li>
          <% if current_customer.customers_abo == 0 %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= t('.subscription_info') %></span>
            (<%= link_to t('.subscribe'), edit_customer_payment_methods_path(:customer_id => current_customer.to_param, :type => :credit_card), class: '_greenColor_ _underline_' %>)</li>
          <% else %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= product.products_title %></span>
            <!--<a href="#" class='_blueColor_ _underline_'>(souscrire)</a>--></li>
          <% end %>
        </ul>
      <% end %>
      <% if current_customer.plush_la_carte_subscriber? %>
        <ul>
          <li><a href="#" class='_blueColor_ _underline_ abo_subscriber'>Plush à la Carte</a></li>
          <li><%= t('.top_part_2').capitalize %>: <%= current_customer.tvod_free %></li>
          <% if current_customer.tvod_free == 0 %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= t('.subscription_info') %></span>
            (<%= link_to t('.subscribe'), info_path(:page_name => t('routes.infos.params.alacarte')), class: '_blueColor_ _underline_' %>)</li>
          <% else %>
            <li><%= t('.subscription') %>: <span class="_bold_"><%= product.products_title %></span>
            <!--<a href="#" class='_blueColor_ _underline_'>(souscrire)</a>--></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div>
      <table class='_hidden_'>
        <thead>
        <tr>
          <td collspan=2><a href="#" class='_underline_ _redColor_ _bold_'>Votre compte Carte-Plus Delhaize</a></td>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>Votre numéro de Carte-Plus:</td>
          <td>
            <span class="_bold_">5304338348939 <a href="#" class='_underline_ _redColor_ _normal_'>(modifier)</a></span>
          </td>
        </tr>
        <tr>
          <td>Votre solde points-Plus:</td>
          <td><span class="_bold_">800</span></td>
        </tr>
        <tr>
          <td>Crédits films disponibles:</td>
          <td><span class='_bold_'>5</span></td>
        </tr>
        <tr>
          <td>Valeur de vos crédits films</td>
          <td><span class="_bold_">&#8364;</span></td>
        </tr>
        </tbody>
      </table>
        <form id="green_banner_form">
          <label for=""><span class="_bold_"><%= t('.discount_code').capitalize %></span></label>
          <div class="_inputContainer">
            <input type="text" name="promotion" id="promotion" placeholder="<%= t('.subscription_info').capitalize %>">
            <input type="submit"  value='<%= t('.validate').capitalize %>'>
            <div id="promotion_response_message" class="_errorMessage_">
            </div>
          </div>
        </form>
