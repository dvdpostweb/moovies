<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => 'new_customer'}) do |f| %>

<div align="center">
  <span>
    <%= devise_error_messages!.gsub(/<a.*a>/, t('products.canvas3.promo_already_taken', :link => promotion_path(:id => params[:id], :email => params[:customer][:email]))).html_safe if params[:customer] && params[:customer][:email]%>
    
    <p class="inputs_codes"><%= f.label :email, t('promotions.show.canvas2.email_label') %> :<br />
      <%= f.text_field :email, :value => @email, :class => 'inputs_promo_code', :size => '40', :tye => 'text' %>
    </p>
   <p class="inputs_codes"><%= f.label :password, t('promotions.show.canvas2.pass_label') %> :<br />
      <%= f.password_field :password, :class => 'inputs_promo_code', :size => '40', :maxlength => '40' %>
    </p>
    <p class="inputs_codes_conf">
      <%= f.label :password_confirmation, t('promotions.show.canvas2.confirmation_pass') %>:<br />
      <%= f.password_field :password_confirmation, :class => 'inputs_promo_code' %>
    </p>
    <%= f.hidden_field :code, :value => @code %>
    <%= hidden_field_tag(:imdb_id, params[:imdb_id] ) if params[:imdb_id] %>
    <%= hidden_field_tag :id, params[:id] %>
    <div style="clear:both;"></div>
    <%= "<div id='error'>#{alert}</div>".html_safe if alert && !alert.empty? %>
  </span>
</div>
<p class="news align2">
  <%= f.check_box :newsletter, :checked => true, :align => :top %>
  <%= t('.newsletter') %>
</p>
<p class="news align">
  <%= f.check_box :newsletter_parnter, :checked => true, :align => :top %>
  <%= t('.newsletter_parnter') %>
</p>

<div class="garanties">
  <h4><%= t('promotions.show.canvas2.garanties') %></h4>
  <ul>
    <li class="engagement"><%= t2('promotions.show.canvas2.engagement', @promo.params[:key]) %></li>
    <li class="stop"><%= t2('promotions.show.canvas2.stop', @promo.params[:key]) %></li>
    <li class="security"><%= t('promotions.show.canvas2.securite') %></li>
  </ul>
</div>
<div class="avantages">
  <h4><%= t('promotions.show.canvas2.avantages') %></h4>
  <ul>
    <li class="film"><%= t('promotions.show.canvas2.film') %></li>
    <li class="home"><%= t('promotions.show.canvas2.home') %></li>
    <li class="platform"><%= t('promotions.show.canvas2.platform') %></li>
  </ul>
</div>
<div style="clear:both;"></div>
<p><input type="submit" border="0" align="absmiddle" id="submit_id3" class="promo_button" name="sent" value="<%= t2('promotions.show.canvas2.essayer', @promo.params[:key]) %>" /></p>
<% end %>