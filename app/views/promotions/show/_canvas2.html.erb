<style>
.canvas2 #promo_content {
  background: url('http://www.dvdpost.be/images/promotions_plush/<%= @promo.params[:background_locale] ? "#{I18n.locale}/" : '' %><%= @promo.params[:background] %>') repeat scroll 0 0 transparent;
  height: 722px;
  margin: 0 auto;
  width: 970px;
}
<% if @promo.params[:brand_logo] %>
.canvas2 #header h2,.canvas2 #header h2 a {
  background: url('http://www.dvdpost.be/images/promotions_plush/<%= @promo.params[:brand_logo] %>') repeat scroll 0 0 transparent;
  height: 39px;
  width: 224px;
}
<% end %>
</style>

<div id="wrap">
  <div id="header" >
    <h1>
      <%= link_to 'plush.be', root_localize_path(), :class => 'f-btn' %>
    </h1>
    <% if @promo.params[:brand_logo] %>
      <h2>
        <%= !@promo.params[:brand_url] ? '' : link_to(@promo.params[:brand_url], @promo.params[:brand_url], :class => 'f-btn', :target => '_blank') %>
      </h2>
    <% end %>
  </div>
  <div class="container clearfix">
    <div id="promo_content">
      <h1 style="color: #212A31;">
        <%= t2('title', @promo.name).html_safe %><br/>
        <strong><%= t2('title_promo', @promo.name).html_safe %></strong>
      </h1>
      <div id="promo_form">
        <h2><%= t2('subtitle', @promo.name).html_safe %></h2>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'new_customer'}) do |f| %>
        <div align="center">
          <span>
          <h3><%= t2('.promo', @promo.name).html_safe %></h3>
            <p class='label'><%= t '.email_label' %> :<br />
              <%= f.text_field :email, :class => 'inputs_promo_code', :size => '40', :tye => 'text' %>
              
            </p>
            <p class='label'><%= t '.pass_label' %> :<br />
               <%= f.password_field :password, :class => 'inputs_promo_code', :size => '40', :maxlength => '40' %>
            </p>
            <%= f.hidden_field :code, :value => 'PRXADN' %>
            <%= hidden_field_tag :return_url, promotion_canva_path(:id => params[:id]) %>
            <div style="clear:both;"></div>
            <%= "<div id='error'>#{t('.error')}</div>".html_safe if alert && !alert.empty? %>
          </span>
        </div>
        <p class="news">
          <%= check_box_tag 'marketing', 1, @checked, :class => :marketing3, :id => 'mark' %>
          <%= t('.accepteconditions') %>
        </p>
        <div class="garanties">
          <h4><%= t('.garanties') %></h4>
          <ul>
            <li class="engagement"><%= t('.engagement') %></li>
            <li class="stop"><%= t('.stop') %></li>
            <li class="security"><%= t('.securite') %></li>
          </ul>
        </div>
        <div class="avantages">
          <h4><%= t('.avantages') %></h4>
          <ul>
            <li class="film"><%= t('.film') %></li>
            <li class="home"><%= t('.home') %></li>
            <li class="platform"><%= t('.platform') %></li>
          </ul>
        </div>
        <div style="clear:both;"></div>
        <p style="padding-top:5px;"><input type="submit" border="0" align="absmiddle" id="submit_id3" class="promo_button" name="sent" value="<%= t('.essayer') %>" /></p>
        <% end %>
      </div>
    </div>

    
      <div id="commentcamarche_content">
        <h2><%= t('.plush') %></h2>
        <h3><%= t('.illimite') %></h3>
        <table cellpadding="0" cellspacing="0" border="0">
          <tr id="vod">
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/vod.jpg" %>" style="padding-left:20px;"/></td>
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/streamingbutton.jpg" %>" style="padding-top:50px;"  /></td>
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/icon_subtitles.gif" %>" style="padding-top:30px; padding-left:40px;" /></td>
            <td><img src="<%= image_path "/assets/promotions/tv_vod.jpg" %>"  style="padding-top:14px;" /></td>
          </tr>
          <tr id="vod">
            <td class="step1"><%= t('.istep1').html_safe %></td>
            <td class="step2"><%= t('.istep2').html_safe %></td>
            <td class="step3"><%= t('.istep3').html_safe %></td>
            <td class="step4"><%= t('.istep4').html_safe %></td>
          </tr>
        </table>
        <h3><%= t('.carte') %></h3>
        <table cellpadding="0" cellspacing="0" border="0">
          <tr id="dvd">
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/vodppv.jpg" %>"style="padding-left:20px;"/></td>
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/payperviewbutton.jpg" %>" style="padding-top:28px;" /></td>
            <td><img src="<%= image_path "/assets/promotions/#{I18n.locale}/icon_subtitles.gif" %>" style="padding-top:30px; padding-left:40px;" /></td>
            <td><img src="<%= image_path "/assets/promotions/tv_vodppv.jpg" %>" style="padding-top:14px;"/></td>
          </tr>
          <tr id="dvd">
            <td class="step1"><%= t('.astep1').html_safe %></td>
            <td class="step2"><%= t('.astep2').html_safe %></td>
            <td class="step3"><%= t('.astep3').html_safe %></td>
            <td class="step4"><%= t('.astep4').html_safe %></td>
          </tr>
        </table>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'new_customer2'}) do |f| %>
      <div id="area_promo">
        <h2><%= t2('promo', @promo.name).html_safe %></h2>
        <p class='label'><%= t '.email_label' %> :<br />
          <%= f.text_field :email, :class => 'inputs_promo_code', :size => '40', :tye => 'text' %>
        </p>
        <p class='label'><%= t '.pass_label' %> :<br />
           <%= f.password_field :password, :class => 'inputs_promo_code', :size => '40', :maxlength => '40' %>
        </p>
        <%= f.hidden_field :code, :value => 'PRXADN' %>
        <%= hidden_field_tag :return_url, promotion_canva_path(:id => params[:id]) %>
        <div style="clear:both;"></div>
        <%= "<div id='error'>#{t('.error')}</div>".html_safe if alert && !alert.empty? %>
        <div class="clearfix"></div>
        <p align="center"><input type="submit" border="0" align="absmiddle" class="promo_button" id="submit_id4" name="sent" value="<%= t('.essayer') %>"></p>
      </div>
      <% end %>
      <p align="center"><%= image_tag "#{I18n.locale}/info_tel.jpg" %></p>
      <div id="promo_footer"><%= t2('conditions', @promo.name).html_safe %></div>
      </div>
    </div>
  </div>
</div>
<div style="display:none" id='text_error_conditions'><%= t('.error_conditions') %></div>
<div id="default" style="display:none"><%= t '.default' %></div>
