<style>
  .jw-skin-vapor .jw-icon-cast button {
    --disconnected-color: rgba(255, 255, 255, 0.6) !important;
  }
</style>
<% if @token %>
    <% token_code = token.token %>
<% else %>
    <% if Token.dvdpost_ip?(request.remote_ip) || (current_customer && current_customer.super_user?) || (/^192(.*)/.match(request.remote_ip)) %>
        <% token_code = "#{streaming.hd? ? '4' : '3'}/i/" + streaming.imdb_id.to_s %>
    <% end %>
<% end %>
<%= jwplayerdefault(filename, source, streaming, token_code, browser, code = nil, season_id, episode_id, @product.image) %>
<div id="player_default">Loading the player...</div>
