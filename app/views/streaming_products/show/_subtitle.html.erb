<% if sub = subtitle.subtitles.by_language(I18n.locale).first %>
  <% title = "<strong>#{sub.name}</strong>".html_safe %>
<% else %>
  <% title = "<strong>#{t('streaming_products.show.kind.without_subtitle')}</strong>".html_safe %>
<% end %>
<%= link_to title, streaming_product_subtitle_path(:streaming_product_id => params[:streaming_product_id], :id => subtitle.to_param, :season_id => params[:season_id], :episode_id => params[:episode_id], :streaming_code => params[:streaming_code], :email => params[:email], :sample => params[:sample], :source => params[:source], :response_id => params[:response_id]), :class => "btn language_btn" %>