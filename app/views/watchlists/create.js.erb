
<% if @product %>
if ($('.vod_list').length) {
    $(".vod_list").replaceWith('<%= escape_javascript render :partial => 'products/vod_list', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')
}
else {
    $("#<%= @submit_id %>").replaceWith('<%= escape_javascript render :partial => 'products/vod_list', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')

}
<% end %>
