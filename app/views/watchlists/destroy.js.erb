<% if @div %>
$('#<%= @div %>').remove();
<% else %>
<% if @product %>
if ($('#film-details .vod_list').length) {
    <% if params[:step].present? %>
    $(".vod_list").replaceWith('<%= escape_javascript render :partial => 'products/vod_list_step4', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')
    <% else %>
    $(".vod_list").replaceWith('<%= escape_javascript render :partial => 'products/vod_list', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')
    <% end %>
}
else {
    <% if params[:step].present? %>
    $("#<%= @submit_id %>").replaceWith('<%= escape_javascript render :partial => 'products/vod_list_step4', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')
    <% else %>
    $("#<%= @submit_id %>").replaceWith('<%= escape_javascript render :partial => 'products/vod_list', :locals => {:product => @product, :source => params[:source], :response_id => params[:response_id]} %>')
    <% end %>
}

<% end %>
<% end %>
