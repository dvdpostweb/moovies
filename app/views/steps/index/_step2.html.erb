<div id="step_wrap">
  <div id="step_container">
    <div class="step_form">
      <div class="step_2 step fr" align="center"></div>
      <h3><%= t('title') %></h3>
      <table width="630" border="0" cellspacing="0" cellpadding="0" class="form_step">
        <%= form_for(current_customer, :url => customer_path(:id => current_customer.to_param), :id => :form_account, :html => {:method => :put}) do |f| %>
          <fieldset>
            <table class='step2form' cellpadding="2" cellspacing="0" border="0" align="center" width="100%">
              <tr>
                <td colspan="3">
                  <%= error_messages_for :customer %>
                </td>
              </tr>
              <tr>
                <td align="right" width="150"><span class="explain_text"><%= t('.gender')%><span class="asterisk_step">*</span></span></td>
                <td align="left" class="explain_text_gender" width='160'>
                  <span><%= f.radio_button :gender, 'f' %><%= t '.miss' %></span>
                  <span><%= f.radio_button :gender, 'm' %><%= t '.mister' %></span>
                </td>
                <td align="left" class="explain_text" width='210'></td>
              </tr>
              <tr>
                <td align="right">
                  <span class="explain_text"><%= t '.first_name' %> <span class="asterisk_step">*</span></span>							
                </td>
                <td>
                  <%= f.text_field :first_name, :class => :new_step_input %>
                </td>
                <td align="left" class="explain_text">
                  <div id='check_firsname' class=""><div id="text"></div> </div>
                </td>
              </tr>
              <tr>
                <td align="right">
                  <span class="explain_text"><%= t '.last_name' %> <span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <%= f.text_field :last_name, :class => :new_step_input %>
                </td>
                <td align="left" class="explain_text">
                  <div id='check_lastname' class=""><div id="text"></div> </div>
                </td>
              </tr>
              <tr height='45'>
                <td align="right">
                  <span class="explain_text">Date de naissance <span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <%= f.date_select :customers_dob, :start_year => 18.years.ago.year, :end_year => 100.years.ago.year, use_month_numbers: true, prompt: { day: t('.day'), month: t('.month'), year: t('.year') }, :order => [:day, :month, :year] %>
                </td>
                <td align="left" class="explain_text">
                  <div id='check_birthday' class=""><div id="text"></div> </div>
                </td>
              </tr>
              <%= f.fields_for :address do |af| %>
              <tr>
                <td align="right">
                  <span class="explain_text">rue <span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <%= af.text_field :street, :class => "new_step_input" %>
                </td>
                <td align="left" class="explain_text">
                  <div id='check_street' class=""><div id="text"></div> </div>
                </td>
              </tr>
              <tr>
                <td align="right">
                  <span class="explain_text">numéro<span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <input class="new_step_input" type="text" autocomplete="off" name="street_address" id="street_address" value="">
                </td>
                <td align="left" class="explain_text">
                  <div id='check_street' class=""><div id="text"></div> </div>
                </td>
              </tr>

              <tr>
                <td align="right">
                  <span class="explain_text">Code Postal <span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <input class="new_step_input" type="text" autocomplete="off" name="postcode" id="postcode" value="">
                </td>
                <td align="left" class="explain_text">
                  <div id='check_zip' class="step_input_ok"><div id="text"></div> </div>
                </td>
              </tr>
              <tr>
                <td align="right"><span class="explain_text">Commune <span class="asterisk_step">*</span></span></td>
                <td>

                  <input class="new_step_input" type="text" name="city" id="city" value="">
                </td>
                <td align="left" class="explain_text">
                  <div id='check_city' class=""><div id="text"></div> </div>
                </td>
              </tr>
              <tr height="45">
                <td align="right">
                  <span class="explain_text">Pays <span class="asterisk_step">*</span></span>
                </td>
                <td>
                  <select class="new_step_select"  name="country" id="country" >
                    <option value="21" selected="selected">Belgique</option><option value="124" >Luxembourg</option><option value="150" >Pays-bas</option>        
                  </select>
                </td>
                <td align="right" class="explain_text">
                  <div id='check_country' class=""><div id="text"></div> </div>
                </td>
              </tr>  
              <% end %>
              <tr>
                <td align="right">
                  <span class="explain_text">Téléphone</span>
                </td>
                <td>
                  <input class="new_step_input" type="text" autocomplete="off" name="phone" id="phone" value="">
                </td>
                <td align="left" class="explain_text">
                  <div id='check_phone' class="step_input_error"><div id="text">Insérez un numéro correct</div> </div>
                </td>
              </tr>               
              <tr>
                <td>&nbsp;</td>
                <td  class="asterisk_explain_step" colspan="2">*Champs requis</td>
              </tr>
              <tr>
                <td></td>
                <td colspan="2" align="left">
                  <p><INPUT type="checkbox"  name="conditions" value='1'><a class="blue_link smaller" href="http://public.dvdpost.com/fr/info/conditions" target="new">J'ai lu et accepté les conditions générales de vente <br /></a></p>
                </td>
              </tr>
              <tr> 
                <td></td>
                <td colspan="2" class="subscription_payement_footer"><div id='check_payment' class=""><div id="text"><br /></div></div></td>
              </tr>
              <tr>
                <td></td>
                <td colspan='2'>
                  <input type="submit" name ="sent" value= "CONFIRMER" class="promo_button" />
                </td>
              </tr>
            </table>

          </fieldset>
        <% end %>
      </table>
    </div>
    <p align="center" style="padding-top:15px;">
      <a href="">
        <%= image_tag "#{I18n.locale}/info_tel.jpg" %>
      </a>
    </p>
  </div>
  <%= render :partial => 'devise/registrations/faq2' %>
</div>
