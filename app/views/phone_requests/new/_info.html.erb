<ul>
	<li id="mail">
		<h4><%= t '.email.title' %></h4>
		<% if !current_customer %>
		  <%= t '.email.text' %>
		  <%= mail_to "info@plush.be" %>
		<% else %>
		  <%= link_to t('.private_message'), new_message_path(), :id => 'new_message', :class => 'facebox' %>
		<% end %>
	</li>
	<li id="phone">
		<h4>
			<%= t '.phone.title' %>
		</h4>
		<%= t('.phone.text').html_safe  %>
	</li>
	<li id="fax">
		<h4>
			<%= t '.fax.title' %>
		</h4>
		<%= t('.fax.text').html_safe %>
	</li>
	<li id="courrier">
		<h4>
			<%= t '.snail.title' %>
		</h4>
		 <%= t('.snail.text').html_safe %> 
	</li>
	<li id="social">
		<h4><%= t '.media' %></h4>
		<%= link_to "Facebook", Moovies.fb_url[I18n.locale],      :id => :fb,   :target => :_blank %>
    <%= link_to "Twitter",  Moovies.twitter_url, :id => :tw,   :target => :_blank %>

	</li>
</ul>