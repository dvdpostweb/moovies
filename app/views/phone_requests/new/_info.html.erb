<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 contact-left">
  <h3 class="f25 pad0 mart0"><%= t '.email.title' %></h3>
  <% if !current_customer %>
      <%= t '.email.text' %>
      <%= mail_to "info@plush.be" %>
  <% else %>
      <!--<#%= link_to t('.private_message'), new_message_path(), :id => 'new_message', :class => 'btn green-bck OpenSansCondensed f15', rel: "facebox" %>-->
      <a href="index.php%3Fpage=contact.html#" class="btn green-bck OpenSansCondensed f15" data-toggle="modal" data-target="#send-mail-modal">Via la Messagerie du Site</a>
<% end %>
  <h3 class="f25 pad0 mart20"><%= t '.phone.title' %></h3>
  <p><%= t('.phone.text').html_safe %></p>
  <h3 class="f25 pad0 mart20"><%= t '.fax.title' %></h3>
  <p><%= t('.fax.text').html_safe %></p>
  <h3 class="f25 pad0 mart20"><%= t '.snail.title' %></h3>
  <p><%= t('.snail.text').html_safe %></p>
</div>

<div id="send-mail-modal" class="modal send-mail fade" role="dialog" tabindex="-1">
  <button type="button" class="close" data-dismiss="modal">&nbsp;</button>

  <div class="modal-dialog thinrgray-bck">
    <form id="send-mail-modal-form">
      <!-- Modal content-->
      <div class="modal-content padtb10 padlr5 block100">
        <h3 class="dark-gray pad0 mar0 marb10">Nouveau message</h3>
        <div class="block100 mart5">
          <strong class="clearfix">Sujet:</strong> <input type="radio" class="iradio" name="sujet" value="1"/> Service technique <input type="radio" class="iradio" name="sujet" value="2"/>
          Service facturation <input type="radio" class="iradio" name="sujet" value="3"/> Service administratif
        </div>
        <div class="block100 mart10">
          <strong class="clearfix">Message:</strong> <textarea class="pad5" name="message" placeholder="Text message.."></textarea>
        </div>

        <!--SUBMIT-->
        <div class="form-group block100 mart20">
          <a href="index.php%3Fpage=contact.html#" class="btn light-blue-bck OpenSansCondensed f18" id="send-mail-submit-modal">Envoyer</a>
        </div>
        <!--/SUBMIT-->
      </div>
    </form>
    <div class="modal-footer dark-gray">
      <div class="text-right">
        <a href="index.php%3Fpage=contact.html#" class="dark-blue close normal f14 mart10" data-dismiss="modal">FERMER X</a>
      </div>
    </div>
  </div>
  <!--/Modal content-->
</div><!--/PSEUDO MODAL-->