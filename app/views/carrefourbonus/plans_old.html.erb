<div class="landing-page">
      <div class="special">
        <div class="special-offer">
          <div class="special-offer-headline"><%= t('.offer') %></div>
          <div class="special-offer-image">
            <%= image_tag('old_images/carrefour/carrefour.png') %>
          </div>
          <h3><%= t('home.carrefourbonus.customer').html_safe %></h3>
          <ul>
            <li>
              <%= image_tag('old_images/carrefour/list-logo.png') %>
              <p><%= t('home.carrefourbonus.4loc').html_safe %></p>
            </li>
            <li>
              <%= image_tag('old_images/carrefour/list-logo.png') %>
              <p><%= t('home.carrefourbonus.first').html_safe %></p>
            </li>
          </ul>
        </div>
        <div class="logo-card"></div>
      </div>
      <%= form_tag carrefourbonus_path(), :id => 'form_carrefour' do %>
      <div class="choise">
        <div class="headline"><h2><%= t('home.carrefourbonus.choose_formula') %></h2></div>
        <% if @error_abo %>
          <div class='error'>
            <%= t('home.carrefourbonus.abo_error') %>
          </div>
        <% end %>
        <div class="choise-offer">
          <div class="choise-offer-select">
            <div class="offer-film">
              <div class="offer-film-number">2 <%= t('home.carrefourbonus.films') %><div class="badge"><div class="badge-text"><%= t('.most_popular') %></div></div></div>
              <div class="first-month">0€</div>
              <div class="first-month-text"><%= t('home.carrefourbonus.first_month') %></div>
              <div class="next-month">3,99€</div>
              <div class="next-month-text"><%= t('home.carrefourbonus.next_month') %></div>
              <div class="offer-film-checkbox">
                <input type="radio" id="carrefour-select-offer-2" name="abo" value='CFB2FILMS' <%= "checked='checked'" if params[:abo]== "CFB2FILMS" %>/>
                <label for="carrefour-select-offer-2">
                  <span></span>
                </label>
              </div>
            </div>
              <div class="vertical-line"></div>
            <div class="offer-film offer-film-checked">  <!-- Class offer-film-checked add through javascript, when checkbox is checked, so the background becomes blue -->
              <div class="offer-film-number">
                4 <%= t('home.carrefourbonus.films') %>
                <div class="badge active"> <!-- Class active add through javascript when special offere exists -->
                  <div class="badge-text"><%= t('home.carrefourbonus.most_popular') %></div>
                </div>
              </div>
              <div class="first-month">3,99€</div>
              <div class="first-month-text"><%= t('home.carrefourbonus.first_month') %></div>
              <div class="next-month">7,99€</div>
              <div class="next-month-text"><%= t('home.carrefourbonus.next_month') %></div>
              <div class="offer-film-checkbox">
                <input type="radio" id="carrefour-select-offer-4" name="abo" value = 'CFB4FILMS' <%= "checked='checked'" if params[:abo]== "CFB4FILMS" %>/>
                <label for="carrefour-select-offer-4">
                  <span></span>
                </label>
              </div>
            </div>
            <div class="vertical-line"></div>
            <div class="offer-film">
              <div class="offer-film-number">6 <%= t('home.carrefourbonus.films') %><div class="badge"><div class="badge-text"><%= t('home.carrefourbonus.most_popular') %></div></div></div>
              <div class="first-month">7,99€</div>
              <div class="first-month-text"><%= t('home.carrefourbonus.first_month') %></div>
              <div class="next-month">11,99€</div>
              <div class="next-month-text"><%= t('home.carrefourbonus.next_month') %></div>
              <div class="offer-film-checkbox">
                <input type="radio" id="carrefour-select-offer-6" name="abo" value = 'CFB6FILMS' <%= "checked='checked'" if params[:abo] == "CFB6FILMS" %>/>
                <label for="carrefour-select-offer-6">
                  <span></span>
                </label>
              </div>
            </div>
            <div class="vertical-line"></div>
            <div class="offer-film">
              <div class="offer-film-number">8 <%= t('home.carrefourbonus.films') %><div class="badge"><div class="badge-text"><%= t('home.carrefourbonus.most_popular') %></div></div></div>
              <div class="first-month">10,99€</div>
              <div class="first-month-text"><%= t('home.carrefourbonus.first_month') %></div>
              <div class="next-month">14,99€</div>
              <div class="next-month-text"><%= t('home.carrefourbonus.next_month') %></div>
              <div class="offer-film-checkbox">
                <input type="radio" id="carrefour-select-offer-8" name="abo" value = 'CFB8FILMS' <%= "checked='checked'" if params[:abo] == "CFB8FILMS" %>/>
                <label for="carrefour-select-offer-8">
                  <span></span>
                </label>
              </div>
            </div>
            <div class="vertical-line"></div>
            <div class="offer-film">
              <div class="offer-film-number">10 <%= t('home.carrefourbonus.films') %><div class="badge"><div class="badge-text"><%= t('home.carrefourbonus.most_popular') %></div></div></div>
              <div class="first-month">13,99€</div>
              <div class="first-month-text"><%= t('home.carrefourbonus.first_month') %></div>
              <div class="next-month">17,99€</div>
              <div class="next-month-text"><%= t('home.carrefourbonus.next_month') %></div>
              <div class="offer-film-checkbox">
                <input type="radio" id="carrefour-select-offer-10" name="abo" value = 'CFB10FILM' <%= "checked='checked'" if params[:abo] == "CFB10FILMS" %>/>
                <label for="carrefour-select-offer-10">
                  <span></span>
                </label>
              </div>
            </div>
          </div>
          <div class="choise-offer-list">
            <ul>
              <li><div class="list-style-blue"></div><%= t('home.carrefourbonus.catalog').html_safe %></li>
              <li><div class="list-style-blue"></div><%= t('home.carrefourbonus.free').html_safe %></li>
              <li><div class="list-style-blue"></div><%= t('home.carrefourbonus.increase').html_safe %></li>
              <li><div class="list-style-blue"></div><%= t('home.carrefourbonus.2_credits').html_safe %></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="code">
        <div class="headline"><h2><%= t('home.carrefourbonus.fill_in_code') %></h2></div>
        <% if @error_abo %>
          <div class='carrefourbonus-error'><%= t('home.carrefourbonus.error') %></div>
        <% end %>
        <button class="code-button"><%= t('home.carrefourbonus.valid') %></button>
      </div>
      <% end %>
      <div class="cards">
        <ul>
          <li><%= image_tag('old_images/carrefour/mastercard.png') %></li>
          <li><%= image_tag('old_images/carrefour/visa.png') %></li>
          <li><%= image_tag('old_images/carrefour/amex.png') %></li>
          <li><%= image_tag('old_images/carrefour/atos.png') %></li>
          <li><%= image_tag('old_images/carrefour/paypal.png') %></li>
          <li><%= image_tag('old_images/carrefour/norton.png') %></li>
          <li><%= image_tag('old_images/carrefour/verisign.png') %></li>
        </ul>
        <center><span class="cards-bottom-text">Secured online transactions managed by Ingenico</span></center>
      </div>
    </div>
