<% path = category_products_path(:category_id => item.to_param, :filter => params[:filter]) %>
<% image = params[:filter] == "vod" ? item.image_vod : item.image %>
<li class = 'cadre'>
  <%= link_to image_tag(image, :size => "162x102"), path %>
  <p>
    <%= link_to "#{item.name}", path, :class => "title" %>
  </p>
  <% children = item.children %>
  <% if children.count > 0 %>
  <ul>
    <% query = params[:filter] == "vod" ? children.active.movies.vod : children.active.movies %>
    <% query.collect do |sub_item| %>
    
      <li>
        <%= link_to "#{sub_item.name}", category_products_path(:category_id => sub_item.to_param, :filter => params[:filter]), :class => "studios" %>
      </li>
    <% end %>
  </ul>
  <% end %>
</li>
