<div class="container white-bck padb30">
  <div class="center-block thin-holder ">
    <div class="block100 cred-buttons">
      <a href="index.php%3Fpage=sign-up.html#" class="btn center-block f16 blue-facebook-bck uppercase radius4 padtb15"><i class="fa fa-facebook marr5 f16"></i> Register with Facebook</a>
      <a href="index.php%3Fpage=sign-up.html#" class="btn center-block f16 red-google-bck uppercase radius4 padtb15 mart15"><i class="fa fa-google-plus marr5 f16"></i> Register with Google</a>
      <a href="index.php%3Fpage=sign-up.html#" class="btn center-block f16 orange-bck uppercase radius4 padtb15 mart15">Register with Orange</a>
    </div>

    <div class="hr-with-words mart30 block100">
      <span class="Arial f20 dark-blue">OR</span>
    </div>

    <div class="block100 mart30">
      <input type="text" name="sign-email" class="f20" placeholder="Email Address">
    </div>

    <div class="block100 text-center mart30">
      <a href="index.php%3Fpage=sign-up.html#" class="btn block100 btn-green-gradient padlr40 padtb15 white f16 normal">Submit</a>
    </div>

    <div class="block100 mart30 text-center">
      <%= link_to t('.sign_in'), new_session_path(resource_name, :code => params[:code], :activation => params[:activation]), class: "f20" %>
    </div>
    <div class="block100 mart15">
      <span class="green f20 block100 text-center">You do not have an account?</span>
    </div>
    <div class="block100 mart5 text-center">
      <%= link_to t('.sign_up'), new_customer_registration_path(:moovie_id => params[:moovie_id], :code => params[:code], :activation => params[:activation]), class: "f20" %>
    </div>
  </div>
</div>
