<div class="container clearfix">
  <div id="step_wrap">
    <div id="step_container">
      <div class="step_form">
        <div class="step_1 step fr" align="center"></div>
        <h3><%= t('.title', :default => 'Créez votre compte:') %></h3>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="labelstep">
          <%= f.label :email, t('.email') %>
          <%= f.email_field :email, :autofocus => true %>
        </div>

        <div class="labelstep">
          <%= f.label :password, t('.password') %>
          <%= f.password_field :password %>
        </div>

        <div class="labelstep">
          <%= f.label :password_confirmation, t('.confirmation_pass') %>
          <%= f.password_field :password_confirmation %>
        </div>
        <p>
          <input type="checkbox" name="marketing" class="Input1" checked="checked" value="YES" align="top"/>
          <%= t('.newdletter', :default => 'Je souhaite être informé des nouveautés et promotions DVDPost.') %>
        </p>
        <p>
          <input type="checkbox" name="marketing" class="Input1" checked="checked" value="YES" align="top"/> 
          <%= t('.newsletter_parnter', :default => 'Je souhaite être informé des promotions de la part des partenaires de DVDPost.') %>
        </p>
        <p><br/><%= f.submit t('.sign_up', :default => "Sign up"), :class => 'promo_button' %></p>
        <% end %>
      </div>
      <p align="center" style="padding-top:15px;"><img src="/assets/fr/info_tel.jpg" border="0" /></p>
    </div>


    <div class="faq-container">
      <h3><%= t('.garantie', :default => 'VOS GARANTIES:') %></h3>
      <div id="faq-info-wrap" class="infinity">
        <div id="faq-info-wrap" class="cinema">
          <h4> <%= t('.catalogue', :default => 'Catalogue illimité') %>
          </h4>
          <div class="clearfix">
            <p><%= t('.catalogue_description', :default => 'Accédez à une sélection de xxxx films par mois en illimité et ce pour le prix d\'un seul ticket de cinéma.') %></p>

          </div>

          <div id="faq-info-wrap" class="engagement ">
            <h4><%= t('.sans_engagement', :default => 'Sans engagement') %></h4>
            <div class="clearfix">
              <p><%= t('.sans_engagement_description', :default => 'Vous pouvez arrêter votre abonnement quand vous voulez. Il suffit de contacter notre service client par téléphone, au <strong>numéro gratuit 0800/95 990</strong> ou au  <strong>numéro payant 0032 2 5036811</strong> pour les appels effectués hors de la Belgique, au plus tard un jour avant la prolongation mensuelle de votre abonnement.') %>
              </p>

            </div>
          </div>
          <div id="faq-info-wrap" class="security">
            <h4><%= t('.securised', :default => '100% sécurisé') %></h4>
            <div class="clearfix">
              <p><%= t('.securised_description', :default => 'Toutes les informations que vous nous communiquez, comme par exemple les informations de paiement, sont encryptées et protégées') %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
