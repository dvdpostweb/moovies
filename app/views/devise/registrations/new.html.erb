<div class="container clearfix">
  <div id="step_wrap">
    <div id="step_container">
      <div class="step_form">
        <% if @promo.nil? || !@promo.tvod_only %>
        <div class="step_1 step <%= I18n.locale %>" align="center"></div>
        <% end %>
        <h3><%= t('.title', :default => 'CrÃ©ez votre compte:') %></h3>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <% if @samsung %>
          <%= f.hidden_field(:samsung, :value => @samsung) %>
        <% else %>
          <%= cookies[:code] ? f.hidden_field(:code, :value => cookies[:code]) : f.hidden_field(:code, :value => @default_code) %>
        <% end %>
        <%= f.hidden_field :abo, :value => params[:abo] %>
        <%= f.hidden_field :language, :value => Moovies.customer_languages[I18n.locale] %>
        <div class="labelstep">
          <%= f.label :email, t('.email') %>
          <%= f.email_field :email, :autofocus => true %>
        </div>

        <div class="labelstep">
          <%= f.label :password, t('.password').html_safe %>
          <%= f.password_field :password %>
        </div>

        <div class="labelstep">
          <%= f.label :password_confirmation, t('.confirmation_pass') %>
          <%= f.password_field :password_confirmation %>
        </div>
        <p>
          <%= f.check_box :newsletter, :checked => true, :align => :top %>
          <%= t('.newsletter') %>
        </p>
        <p>
          <%= f.check_box :newsletter_parnter, :checked => true, :align => :top %>
          <%= t('.newsletter_parnter') %>
        </p>
        <p><br/><%= f.submit t('.sign_up', :default => "Sign up"), :class => 'promo_button' %></p>
        <% end %>
      </div>
      <p align="center" class="telfooter"><a class="f-btn <%= I18n.locale %>" href="mailto:info@plush.be">info@plush.be</a></p>
    </div>

  <%= render :partial => 'devise/registrations/faq1' %>
  </div>
</div>
