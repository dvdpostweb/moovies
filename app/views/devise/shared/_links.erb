
  <%- if controller_name != 'sessions' %>
    <% if params[:freetrial_action].present? && params[:freetrial_action] == "FREETRIAL" %>
      <%= link_to t('.sign_in'), new_session_path(resource_name, :code => params[:code], :activation => params[:activation], :freetrial_action => params[:freetrial_action], :activation => params[:activation], :films => params[:films], :price => params[:price]), class: "bottom-page-link" %><br /><br />
    <% else %>
      <%= link_to t('.sign_in'), new_session_path(resource_name, :code => params[:code], :activation => params[:activation]), class: "bottom-page-link" %><br /><br />
    <% end %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <% if params[:freetrial_action].present? && params[:freetrial_action] == "FREETRIAL" %>
      <%= link_to t('.forget_password'), new_password_path(resource_name, :code => params[:code], :activation => params[:activation], :freetrial_action => params[:freetrial_action], :activation => params[:activation], :films => params[:films], :price => params[:price]), class: "bottom-page-link" %><br />
    <% else %>
      <%= link_to t('.forget_password'), new_password_path(resource_name, :code => params[:code], :activation => params[:activation]), class: "bottom-page-link" %><br />
    <% end %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <% if params[:freetrial_action].present? && params[:freetrial_action] == "FREETRIAL" %>
      <label class="bottom-page-label"><%= t('.promotions.show.toregistraniopage') %>? <%= link_to t('.sign_up'), new_customer_registration_path(:moovie_id => params[:moovie_id], :code => params[:code], :freetrial_action => params[:freetrial_action], :activation => params[:activation], :films => params[:films], :price => params[:price]), class: "bottom-page-link" %></label><br />
    <% else %>
      <label class="bottom-page-label"><%= t('.promotions.show.toregistraniopage') %>? <%= link_to t('.sign_up'), new_customer_registration_path(:moovie_id => params[:moovie_id], :code => params[:code], :activation => params[:activation]), class: "bottom-page-link" %></label><br />
    <% end %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('.no_confirmation'), new_confirmation_path(resource_name, :locale => I18n.locale) %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
    <% end -%>
  <% end -%>
