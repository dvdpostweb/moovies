<% text = (t('products.show.members_critic')+" (<span id='rat' itemprop='ratingValue'>#{product.rating[:rating] > 0 ? product.rating[:rating] / 2.0 : 0 }</span> / <span id='total'>5</span> - <span class='osc' data-prop='ratingCount' itemprop='ratingCount'>#{@product.rating_count}</span> #{t('products.show.count')})").html_safe %>
<div id="critics-wrap">
  <div class="tab-container">
    <ul class="etabs osc tabs">
      <li class="tab" id='tab1_li'>
        <div itemprop="aggregateRating" itemscope="" itemtype="http://schema.org/AggregateRating">
          <%= link_to(text, '#tab1', :id => 'tab1_menu', :class => :active) %>
          <meta itemprop="bestRating" content="5">
        </div>
      </li>                
    </ul>
    <div class="panel-container">
      <%= render :partial => "products/show/review_tab", :locals => {:chronicle => @chronicle, :product => product, :reviews_count => reviews_count, :reviews => reviews, :review_sort => review_sort, :product_title => product_title, :source => source, :response_id => response_id}%>
      </div>                
    </div>
  </div>
</div><!-- #critics-wrap -->
