<% if params[:package].nil? && params[:concerns] != :productable && params[:belgium].blank? %>
  $('#all').html("<%= escape_javascript(render(:partial => 'products/index/hp', :formats => [:html])) %>");
  history.pushState('', document.title, window.location.pathname);
  $('.popper').popover({
      placement: "left",
      trigger: "hover",
      container: 'body',
      html: true,
      delay: {
          show: 300,
          hide: 100
      },
      content: function () {
          return $(this).next('.synopsys-content').html();
      }
  });
  $('.responsive-carousel').slick({
      dots: false,
      infinite: false,
      speed: 200,
      slidesToShow: 5,
      slidesToScroll: 2,
      responsive: [
          {
              breakpoint: 980,
              settings: {
                  slidesToShow: 3,
                  slidesToScroll: 2,
              }
          },
          {
              breakpoint: 600,
              settings: {
                  slidesToShow: 2,
                  slidesToScroll: 1
              }
          }
      ]
  });
  //$( "#filter_online_form" ).trigger("reset");
  //$( "p" ).off( "button-la-carte", "**" );
<% else %>

  <% if !params[:page].nil? && cookies[:endless] != 'deactive' %>

    $('#all').append("<%= escape_javascript(render(:partial => cookies[:display] == 'list' ? 'products/index/movie_details' : 'products/index/movie_details_jacket', :collection => @products, :locals => {:target => @target}, :formats => [:html])) %>");

    <% if (params[:type] == 'directors' && @directors.next_page) || (params[:type] == 'actors' && @actors.next_page) || ((params[:type] == 'products' || params[:type] == nil) && @products.next_page) %>

      $('#pagination_content').html('<%= escape_javascript(render(:partial => 'products/index/pagination', :locals => {:item => @products})) %>');


  <% else %>

    $('#pagination_content').html('');
    <% end %>

<% else %>

  $('#all').html("<%= escape_javascript(render(:partial => 'products/index/all', :formats => [:html])) %>");
  load_form();
  $('.popper').popover({
        placement: "left",
        trigger: "hover",
        container: 'body',
        html: true,
        delay: {
            show: 300,
            hide: 100
        },
        content: function () {
            return $(this).next('.synopsys-content').html();
        }
    })
  <% end %>
<% end %>
