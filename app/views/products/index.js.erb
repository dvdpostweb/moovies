<% if params[:package].nil? && params[:concerns] != :productable && params[:belgium].blank? %>
$('#all').html("<%= escape_javascript(render(:partial => 'products/index/hp', :formats => [:html])) %>");
history.pushState('', document.title, window.location.pathname);
$('.popper').popover({
    placement: "left",
    trigger: "hover",
    container: 'body',
    html: true,
    delay: {
        show: 300,
        hide: 100
    },
    content: function () {
        return $(this).next('.synopsys-content').html();
    }
});
$('.responsive-carousel').slick({
    dots: false,
    infinite: false,
    speed: 200,
    slidesToShow: 5,
    slidesToScroll: 2,
    responsive: [
        {
            breakpoint: 980,
            settings: {
                slidesToShow: 3,
                slidesToScroll: 2,
            }
        },
        {
            breakpoint: 600,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 1
            }
        }
    ]
});
<% else %>
$('#all').html("<%= escape_javascript(render(:partial => 'products/index/all', :formats => [:html])) %>");
load_form();
$('.popper').popover({
    placement: "left",
    trigger: "hover",
    container: 'body',
    html: true,
    delay: {
        show: 300,
        hide: 100
    },
    content: function () {
        return $(this).next('.synopsys-content').html();
    }
})
$("#load_more").click(function(e) {
    e.preventDefault();
    $.ajax({
        url: $('.next_page:last').attr('href'),
        dataType: 'script'
    });
});
<% end %>
