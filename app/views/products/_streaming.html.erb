<% if !product.get_vod_online(session[:country_id]).empty? %>
  <% if product.svod_dates_online.first %>
    <% title = t('.watch_svod') %>
    <% class_name = "watch action_btn" %>
  <% else %>
    <% title = raw t('.watch_tvod', :price => product.get_vod_online(session[:country_id]).first.ppv_price) %>
    <% class_name = "alacarte action_btn" %>
  <% end %>
  <%= link_to  title, product_action_path(:product_id => product.to_param, :origin => :products), :class => class_name %>
<% end %>
