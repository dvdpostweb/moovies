<% product = detail2 %>
<% data = product.description_data(true) %>
<% product_title = data[:title] %>
<% product_image = data[:image] %>
<div class="ca-item ca-item-<%= detail2_counter %>">
  <div class="content">
    <%= link_to image_tag(product.image, :width => 145, :height => 217), product_path(:id => product.to_param, :source => @source), 'data-url' => product_data_path(:product_id => product.to_param, :source => @source, :response_id => @response_id), :class => :cover %>
    <div class="tooltips" style="display:none">
      <p class="tooltips_title"><%= product_title %> (<%= product.year %>)</p>
      <p class="tooltips_description"><%= truncate_html(data[:description].text, :length => 500) %> </p>
      <p class="tooltips_rating stars"><%= render :partial => 'products/rating', :locals => {:product => product, :background => @rating_color, :size => :long, :source => @source, :response_id => @response_id} %></p>
      <p class="tooltips_runtime"><%= t('.runtime') %> <%= product.runtime %> <%= t('.minutes') %></p>
      <div class="tooltips_other">loading</div>
    </div>
    
  </div>
  
</div>
