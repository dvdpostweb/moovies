      <%= "<span class='hd'></span>".html_safe if product.hd?(session[:country_id]) %>
    <% end %>
    <% image = image_tag(product.image, :width => 145, :height => 217) rescue "<p>No image</p>" %>
    <%= link_to image, product_path(:id => product.to_param, :source => source), 'data-url' => product_data_path(:product_id => product.to_param, :source => source, :response_id => @response_id, :div_id => div_id), :class => :cover %>
