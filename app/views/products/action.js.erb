<% if current_customer %>
  <% if streaming_access? %>
    <% if current_customer.subscription_type.packages_ids.split(',').include?(@product.package_id.to_s) %>
       window.location.href = '<%= streaming_product_path(:id => @product.imdb_id) %>'
    <% else %>
      jQuery.facebox('<%= escape_javascript(render(:partial => 'products/wrong_package')) %>')
    <% end %>
  <% else %>
    jQuery.facebox('<%= escape_javascript(render(:partial => 'products/no_access')) %>')
  <% end %>
<% else %>
  jQuery.facebox('<%= escape_javascript(render(:partial => 'products/log')) %>')
<% end %>