<%= render :partial => 'layouts/filters_online', :locals => {:selected_countries => @selected_countries, :languages => @languages, :subtitles => @subtitles} %>
<div class="block100 thinrgray-bck radius2 padlr10 switch-view-panel">
  <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
    <%= link_to params.merge(:display => 'jacket', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :remote => true, :class => 'Grid dark-blue radius2', :title => "Grid View" do %>
        <i class="fa fa-th-large f15"></i>
    <% end %>
    <%= link_to params.merge(:display => 'list', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :remote => true, :class => 'Expanded dark-blue radius2 marl10', :title => "List View" do %>
        <i class="fa fa-list f15"></i>
    <% end %>
    <a href="index.html#" id="activate" class="btn marl10 f11 dark-blue-bck white">Activer la pagination automatique</a>
  </div>
  <%= render :partial => 'products/index/sorting' %>
</div>
<% if cookies[:display] == "list" %>
    <div id="list-view">
      <%= render :partial => "products/index/movie_details", :collection => @products, :locals => {:target => @target} %>
      <div class="block100 mart30 pagin-bar">
        <ul>
