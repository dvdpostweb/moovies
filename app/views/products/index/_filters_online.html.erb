        <label class="OpenSansCondensed f20 block100">Année</label>
        <div class="col-md-5 col-sm-5 col-xs-5 position-relative">
          <select class="dropdown-select" id="from-dropdown" name="from">
            <option selected="selected">From</option>
            <option value="1920">1920</option>
            <option value="1925">1925</option>
            <option value="1930">1930</option>
            <option value="1945">1945</option>
            <option value="1955">1955</option>
            <option value="1980">1980</option>
            <option value="1990">1990</option>
            <option value="2000">2000</option>
            <option value="2010">2010</option>
            <option value="2017">2017</option>
          </select>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-2 text-center padt10">-</div>
        <div class="col-md-5 col-sm-5 col-xs-5 position-relative">
          <select class="dropdown-select" id="to-dropdown" name="to">
            <option selected="selected">To</option>
            <option value="1920">1920</option>
            <option value="1925">1925</option>
            <option value="1930">1930</option>
            <option value="1945">1945</option>
            <option value="1955">1955</option>
            <option value="1980">1980</option>
            <option value="1990">1990</option>
            <option value="2000">2000</option>
            <option value="2010">2010</option>
            <option value="2017">2017</option>
            <option value="2018">2018</option>
          </select>
        </div>
      </div>
      <!--/FROM-TO DROPDOWNS-->

      <!--PUBLIC SLIDER-->
      <div class="left-item" id="public-range-slider">
        <label class="OpenSansCondensed f20">Public</label>
        <input type="text" id="public-range" name="public-range" value=""/>
      </div>
      <!--/PUBLIC SLIDER-->

      <!--PAYS AUTOCOMPLETE TAGS-->
      <div class="left-item" id="pays-tags">
        <label class="OpenSansCondensed f20">Pays</label>
        <input type="text" class="tags" name="pays-autocomplete-tags"
               id="pays-autocomplete-tags"/>
        <div class="tags-autocomplete-holder block100"></div>
      </div>
      <!--/PAYS AUTOCOMPLETE TAGS-->

      <!--GENRES DROPDOWN-->
      <div class="left-item" id="genres">
        <label class="OpenSansCondensed f20">Genres</label>
        <select class="dropdown-select" id="genres-dropdown" name="genres">
          <option selected="selected">Select..</option>
          <option value="Action">Action</option>
          <option value="Animation">Animation</option>
          <option value="Cineclub">Cineclub</option>
          <option value="Court-métrage">Court-métrage</option>
          <option value="Crime">Crime</option>
          <option value="Documentaires">Documentaires</option>
          <option value="Erotiques">Erotiques</option>
          <option value="Histoire & Culture">Histoire & Culture</option>
          <option value="Humour">Humour</option>
          <option value="Science-fiction">Science-fiction</option>
          <option value="Voyage & Découverte">Voyage & Découverte</option>
        </select>
        <div class="tags-autocomplete-holder block100"></div>
      </div>
      <!--/GENRES DROPDOWN-->

      <input type="hidden" name="view_movies" value="">
    </form>
    <!--/FORM FILTERS-->

  </div>
  <!--/FILTERS INNER-->
</div>

<% content_for :run_specific_javascript do %>
    <%= javascript_include_tag "products/catalog" %>
<% end %>









