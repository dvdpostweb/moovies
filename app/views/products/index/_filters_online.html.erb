<div id="filters">
  <!--FILTERS INNER-->
  <div id="filters-inner">
    <%= form_tag products_short_path(:package => params[:package].nil? ? Moovies.packages.invert[(params[:kind] == :adult ? 5 : 2)] : params[:package], :list_id => params[:list_id], :category_id => params[:category_id], :actor_id => params[:actor_id], :director_id => params[:director_id], :studio_id => params[:studio_id]), method: 'get', id: 'filter_online_form' do %>
        <div class="left-item filters-top-buttons">
          <% unless customer_signed_in? %>
          <a href="index.html#"
             class="btn lightergray-bck dark-blue OpenSansCondensed f23 block100 mart0"
             id="left-promo-code-trigger">Code Promo <i
          class="fa fa-caret-down white marl5 f17"></i> </a>
          <div class="block100 left-promo-code text-center overflow-hidden">
            <form>
              <h4 class="dark-blue">Introduisez votre code promo ci-dessous</h4>
              <div class="block100 padlr10">
                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                  <input type="text" name="promo-code" placeholder="Code">
                </div>
                <input type="submit"
                       class="btn green-bck col-lg-2 col-md-2 col-sm-2 col-xs-2"
                       name="promo-code-submit" value="GO!">
              </div>
            </form>
          </div>
              <% end %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <%= hidden_field_tag :belgium, params[:belgium] %>
          <%= link_to t("products.left_column.#{Moovies.packages.invert[(params[:kind] == :adult ? 5 : 2)]}"), products_short_path(:package => Moovies.packages.invert[(params[:kind] == :adult ? 5 : 2)]), :remote => true, :id => "button-la-carte", :class => "tvod packages #{params[:package] == Moovies.packages.invert[(params[:kind] == :adult ? 5 : 2)] ? 'current' : ''} btn light-blue-bck OpenSansCondensed f23 block100" %>
          <%= link_to t("products.left_column.#{Moovies.packages.invert[(params[:kind] == :adult ? 4 : 1)]}"), products_short_path(:package => Moovies.packages.invert[(params[:kind] == :adult ? 4 : 1)]), :remote => true, :id => "button-la-unlmited", :class => "svod packages #{params[:package] == Moovies.packages.invert[(params[:kind] == :adult ? 4 : 1)] ? 'current' : ''} btn OpenSansCondensed f23 block100" %>
          <%= link_to t("products.left_column.adult"), products_short_path(:kind => :adult), :id => "button-18-plus", :class => "adult packages btn violet OpenSansCondensed f23 block100" if params[:kind] != :adult %>
        </div>
        <!--/BUTTONS-->

        <!--FORM FILTERS-->
        <!--<form name="filters-form" id="filters-form" method="POST">-->

        <!--CATEGORIES-->
        <div class="left-item mart15" id="categories">
          <label class="OpenSansCondensed f20"><%= t('products.index.filters.link') %></label>

          <div class="col-md-11 col-sm-11 col-xs-11 f12 mart5 text-left">
            <%= t('products.left_column.svod_last_added') %>
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart5">
            <%= radio_button_tag('filters[view_mode]', "last_added", params[:filters] && params[:filters][:view_mode] == 'last_added' ? true : false, class: "links") %>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Les plus populaires
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="les-plus-populaires"/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Dernière chance
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="derniere-chance "/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Les mieux côtés
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]" value="Les-mieux-cotes"/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Les mieux côtés
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="recruitment-user-type"/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Bientôt disponible
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="bientot-disponible"/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Nouveautés
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="recruitment-user-type"/>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
            Haute Définition
          </div>
          <div class="col-md-1 col-sm-1 col-xs-1 mart10">
            <input type="radio" class="iradio" name="categories[]"
                   value="haute-definition"/>
          </div>
          <hr>
          <div class="col-md-12 col-sm-121 col-xs-12 f12 text-left mart10">
            <a href="index.html#" class="no-underline">Belgium selection/Vike</a>
          </div>
        </div>
        <!--/CATEGORIES-->

        <!--AUDIO AUTOCOMPLETE TAGS-->
        <div class="left-item" id="audio-tags">
          <label class="OpenSansCondensed f20">Audio</label>
          <input type="text" class="tags" name="audio-autocomplete-tags"
                 id="audio-autocomplete-tags"/>
          <div class="tags-autocomplete-holder block100"></div>
        </div>
        <!--/AUDIO AUTOCOMPLETE TAGS-->

        <!--SUBTITLES AUTOCOMPLETE TAGS-->
        <div class="left-item" id="subtitles-tags">
          <label class="OpenSansCondensed f20">Sous-titres</label>
          <input type="text" class="tags" name="subtitles-autocomplete-tags"
                 id="subtitles-autocomplete-tags"/>
          <div class="tags-autocomplete-holder block100"></div>
        </div>
        <!--/SUBTITLES AUTOCOMPLETE TAGS-->

        <!--LISTING SLIDER-->
        <div class="left-item" id="listing-range-slider">
          <label class="OpenSansCondensed f20">Cotations</label>
          <input type="text" id="listing-range" name="public-range" value=""/>
        </div>
        <!--/LISTING SLIDER-->

        <!--FROM-TO DROPDOWNS-->
        <div class="left-item" id="from-to">
          <label class="OpenSansCondensed f20 block100">Année</label>
          <div class="col-md-5 col-sm-5 col-xs-5 position-relative">
            <select class="dropdown-select" id="from-dropdown" name="from">
              <option selected="selected">From</option>
              <option value="1920">1920</option>
              <option value="1925">1925</option>
              <option value="1930">1930</option>
              <option value="1945">1945</option>
              <option value="1955">1955</option>
              <option value="1980">1980</option>
              <option value="1990">1990</option>
              <option value="2000">2000</option>
              <option value="2010">2010</option>
              <option value="2017">2017</option>
            </select>
          </div>
          <div class="col-md-2 col-sm-2 col-xs-2 text-center padt10">-</div>
          <div class="col-md-5 col-sm-5 col-xs-5 position-relative">
            <select class="dropdown-select" id="to-dropdown" name="to">
              <option selected="selected">To</option>
              <option value="1920">1920</option>
              <option value="1925">1925</option>
              <option value="1930">1930</option>
              <option value="1945">1945</option>
              <option value="1955">1955</option>
              <option value="1980">1980</option>
              <option value="1990">1990</option>
              <option value="2000">2000</option>
              <option value="2010">2010</option>
              <option value="2017">2017</option>
              <option value="2018">2018</option>
            </select>
          </div>
        </div>
        <!--/FROM-TO DROPDOWNS-->

        <!--PUBLIC SLIDER-->
        <div class="left-item" id="public-range-slider">
          <label class="OpenSansCondensed f20">Public</label>
          <input type="text" id="public-range" name="public-range" value=""/>
        </div>
        <!--/PUBLIC SLIDER-->

        <!--PAYS AUTOCOMPLETE TAGS-->
        <div class="left-item" id="pays-tags">
          <label class="OpenSansCondensed f20">Pays</label>
          <input type="text" class="tags" name="pays-autocomplete-tags"
                 id="pays-autocomplete-tags"/>
          <div class="tags-autocomplete-holder block100"></div>
        </div>
        <!--/PAYS AUTOCOMPLETE TAGS-->

        <!--GENRES DROPDOWN-->
        <div class="left-item" id="genres">
          <label class="OpenSansCondensed f20">Genres</label>
          <select class="dropdown-select" id="genres-dropdown" name="genres">
            <option selected="selected">Select..</option>
            <option value="Action">Action</option>
            <option value="Animation">Animation</option>
            <option value="Cineclub">Cineclub</option>
            <option value="Court-métrage">Court-métrage</option>
            <option value="Crime">Crime</option>
            <option value="Documentaires">Documentaires</option>
            <option value="Erotiques">Erotiques</option>
            <option value="Histoire & Culture">Histoire & Culture</option>
            <option value="Humour">Humour</option>
            <option value="Science-fiction">Science-fiction</option>
            <option value="Voyage & Découverte">Voyage & Découverte</option>
          </select>
          <div class="tags-autocomplete-holder block100"></div>
        </div>
        <!--/GENRES DROPDOWN-->

        <input type="hidden" name="view_movies" value="">
        <!--</form>-->
        <!--/FORM FILTERS-->
    <% end %>
  </div>
  <!--/FILTERS INNER-->
</div>









