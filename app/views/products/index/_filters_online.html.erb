<div id="filters">
  <!--FILTERS INNER-->
  <div id="filters-inner">

    <!--BUTTONS-->
    <div class="left-item filters-top-buttons">
      <a href="index.html#"
         class="btn lightergray-bck dark-blue OpenSansCondensed f23 block100 mart0"
         id="left-promo-code-trigger">Code Promo <i
      class="fa fa-caret-down white marl5 f17"></i> </a>
      <div class="block100 left-promo-code text-center overflow-hidden">
        <form>
          <h4 class="dark-blue">Introduisez votre code promo ci-dessous</h4>
          <div class="block100 padlr10">
            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
              <input type="text" name="promo-code" placeholder="Code">
            </div>
            <input type="submit"
                   class="btn green-bck col-lg-2 col-md-2 col-sm-2 col-xs-2"
                   name="promo-code-submit" value="GO!">
          </div>
        </form>
      </div>
      <a href="index.html#" class="btn light-blue-bck OpenSansCondensed f23 block100"
         id="button-la-carte">Plush à la Carte</a>
      <a href="index.html#" class="btn OpenSansCondensed f23 block100"
         id="button-la-unlmited">Plush Unlimited</a>
      <a href="index.html#" class="btn violet OpenSansCondensed f23 block100"
         id="button-18-plus">18+</a>
    </div>
    <!--/BUTTONS-->

    <!--FORM FILTERS-->
    <form name="filters-form" id="filters-form" method="POST">

      <!--CATEGORIES-->
      <div class="left-item mart15" id="categories">
        <label class="OpenSansCondensed f20">Catégories</label>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 mart5 text-left">
          Derniers ajouts
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart5">
          <input type="radio" class="iradio" name="categories[]" value="derniers-ajouts"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Les plus populaires
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="les-plus-populaires"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Dernière chance
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="derniere-chance "/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Les mieux côtés
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]" value="Les-mieux-cotes"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Les mieux côtés
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="recruitment-user-type"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Bientôt disponible
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="bientot-disponible"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Nouveautés
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="recruitment-user-type"/>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-11 f12 text-left mart10">
          Haute Définition
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1 mart10">
          <input type="radio" class="iradio" name="categories[]"
                 value="haute-definition"/>
        </div>
        <hr>
        <div class="col-md-12 col-sm-121 col-xs-12 f12 text-left mart10">
          <a href="index.html#" class="no-underline">Belgium selection/Vike</a>
        </div>
      </div>
      <!--/CATEGORIES-->

      <!--AUDIO AUTOCOMPLETE TAGS-->
      <div class="left-item" id="audio-tags">
        <label class="OpenSansCondensed f20">Audio</label>
        <input type="text" class="tags" name="audio-autocomplete-tags"
               id="audio-autocomplete-tags"/>
        <div class="tags-autocomplete-holder block100"></div>
      </div>
      <!--/AUDIO AUTOCOMPLETE TAGS-->

      <!--SUBTITLES AUTOCOMPLETE TAGS-->
      <div class="left-item" id="subtitles-tags">
        <label class="OpenSansCondensed f20">Sous-titres</label>
        <input type="text" class="tags" name="subtitles-autocomplete-tags"
               id="subtitles-autocomplete-tags"/>
        <div class="tags-autocomplete-holder block100"></div>
      </div>
      <!--/SUBTITLES AUTOCOMPLETE TAGS-->

      <!--LISTING SLIDER-->
      <div class="left-item" id="listing-range-slider">
        <label class="OpenSansCondensed f20">Cotations</label>
        <input type="text" id="listing-range" name="public-range" value=""/>
      </div>
      <!--/LISTING SLIDER-->

      <!--FROM-TO DROPDOWNS-->
