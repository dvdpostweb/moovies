<% package_id = type == :svod ? (params[:kind] == :adult ? 4 : 1) : (params[:kind] == :adult ? 5 : 2) %>
<div id="ca-container" class="ca-container">
  <div class="title"><%= t(".title_#{title}")%></div>
  <div class="ca-wrapper">
    <%= render :partial => 'products/detail2', :collection => data %>
  </div>
  <%= link_to t(".more"), products_short_path(:package => Moovies.packages.invert[package_id], 'filters[view_mode]' => view_mode), :class => :right %>
</div>