<div class="loading_bar" style="display:none"><%= image_tag 'loading.gif' %></div>
<div id="maincontent" >
  <div id='filter_layout'>
    <%= render :partial => 'layouts/filters_online', :locals => {:selected_countries => @selected_countries, :languages => @languages, :subtitles => @subtitles }%>
  </div>
  <h1 class="ttl">&nbsp;</h1>
  <%= render :partial => 'products/index/image', :locals => {:people => @people} if @people %>
  <% if cookies[:display] == 'list' %>
      <div class="selected-Expanded"  >list</div> <%= link_to t('.jacket'), params.merge(:display => 'jacket', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :class => 'Grid' %>
  <% else %>
      <%= link_to t('.list'), params.merge(:display => 'list', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :class => 'Expanded' %> <div class="selected-Grid">jacket</div>
  <% end %>
  <!--   ==============   MOVIES   ==============   -->
  <% if cookies[:endless] == 'deactive' %>
      <%= link_to t('products.index.endless_active'), params.merge(:endless => 'active', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :class => "endless" %>
  <% else %>
      <%= link_to t('products.index.endless_deactive'), params.merge(:endless => 'deactive', :kind => (params[:kind] == :normal ? nil : params[:kind]), :page => nil), :class => "endless" %>
  <% end %>
  <div id="products">
    <%= render :partial => 'products/index/sorting' %>
    <%= render :partial => cookies[:display] == 'list' ? 'products/index/movie_details' : 'products/index/movie_details_jacket', :collection => @products, :locals => {:target => @target} %>
  </div>
  <div id='pagination_content'>
    <%= render :partial => 'products/index/pagination', :locals => {:item => @products} %>
  </div>
  <%= t(products_index_description, :link_abo => info_path(:page_name => t('routes.infos.params.vod')), :link_svod => (params[:kind] == :adult ? products_short_path(:package => Moovies.packages.invert[4]) : products_short_path(:package => t("routes.product.params.package.#{Moovies.packages.invert[1]}"))), :link_tvod => (params[:kind] ==  :adult ? products_short_path(:package => Moovies.packages.invert[5]) : products_short_path(:package => t("routes.product.params.package.#{Moovies.packages.invert[2]}")))).html_safe %>

  <!--   ==============   END MOVIES   ==============   -->
</div>
<%= render :partial => 'products/index/filters_online', :locals => { :countries => @countries} %>
