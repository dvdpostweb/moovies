<div id="addwishlist_title"><%= t '.title' %></div>
<%= form_for(:customer, :url => customer_path, :id => :form_account, :html => {:method => :put}) do |f| %>
  <table class="champ_compte" align="center" cellpadding="0" cellspacing="8" width="500">
    <tr>
      <td colspan="3">
        <%= error_messages_for :customer %>
      </td>
    </tr>
   <% if params[:type] == 'nickname' %>
     <tr>
       <td align="right">
         <span class="explain_text"><strong><%= t '.nickname' %> :</strong></span>
       </td>
       <td>
         <span align="left">
           <%= f.text_field :nickname %>
         </span>
       </td>
       <td width="49"  align="left" class="explain_text_gender"></td>
     </tr>
   <% else %>
    <tr>
      <td width="171"></td>
      <td width="228" align="right" class="explain_text_gender">
        <p class="explain_text_gender">
          <span>
            <%= f.radio_button :gender, 'f' %><%= t '.miss' %>
          </span>
          <span>
            <%= f.radio_button :gender, 'm' %><%= t '.mister' %>
          </span>
        </p>
      </td>
      <td width="49"  align="left" class="explain_text_gender"></td>
    </tr>
    <tr>
      <td align="right">
        <span class="explain_text"><strong><%= t '.firstname' %> :</strong></span>
      </td>
      <td align="left">
        <span align="right">
          <%= f.text_field :first_name %>
        </span>
      </td>
      <td class="explain_text" align="left">
      </td>
    </tr>
    <tr>
      <td align="right">
        <span class="explain_text"><strong><%= t '.lastname' %> :</strong></span>
      </td>
      <td>
        <span align="left">
          <%= f.text_field :last_name %>
        </span>
      </p>						
    </td>
    <td width="49"  align="left" class="explain_text_gender"></td>
  </tr>
  <tr>
    <td align="right">
      <span class="explain_text"><strong><%= t '.email' %> :</strong></span>
    </td>
    <td>
      <span align="left">
        <%= f.text_field :email %>
        <%= f.hidden_field :new_email, :value => @customer.email %>
        
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>
  <tr height="45">
    <td align="right">
      <strong><span class="explain_text"><%= t '.birthday' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <%= select_day @customer.birthday %>
        <%= select_month @customer.birthday, :use_month_numbers => true %>
        <%= select_year @customer.birthday, :start_year => 100.years.ago.year, :end_year => 18.years.ago.year %>
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>
                
  <tr>
    <td align="right" class="identification" >
      <strong><span class="explain_text"><%= t '.phone' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <%= f.text_field :phone, :value => @customer.phone %>
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>                 
  <tr>
    <td align="right" class="identification" >
      <strong><span class="explain_text"><%= t '.password' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <span id='password'>
         &bull; &bull; &bull; &bull; &bull; &bull; 
        </span>
        <%= link_to t('.change_password'), nil, :id => 'change_password' %>
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>
  <tr id="password_confirmation" style="display:none">
    <td align="right" class="identification" >
      <strong><span class="explain_text"><%= t '.password_confirmation' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <%= f.password_field :clear_pwd_confirmation %>
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>
  <% end %>
  <tr>
  
    <td colspan="3">  
      <p class="bouton_probleme" align="right">
        <%= submit_tag t('.create'),:id => "submit_account", :class => "form_ajax" %>
      </p>
    </td>
  </tr>               
</table>
<% end %>