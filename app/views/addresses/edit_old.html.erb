<div id="addwishlist_title"><%= t '.title' %></div>
<%= form_for(:address, :url => customer_addresses_path) do |f| %>
<table class="champ_compte" align="center" cellpadding="0" cellspacing="8" width="450">
  <tr>
    <td colspan="3">
      <%= error_messages_for :address %>
    </td>
  </tr>
  <tr>
    <td align="right">
      <span class="explain_text"><strong><%= t '.firstname' %> :</strong></span>							
    </td>
    <td align="left">
      <span align="right">
        <%= f.text_field :first_name, :value => @address.first_name %>
      </span>
    </td>
  </tr>
  <tr>
    <td align="right">
      <span class="explain_text"><strong><%= t '.lastname' %> :</strong></span>
    </td>
    <td>
      <span align="left">
        <%= f.text_field :last_name, :value => @address.last_name %>
      </span>
      
    </td>
  </tr>
  <tr>
		<td align="right">
			<strong>
			  <span class="explain_text"><%= t '.street' %> :</span>
	    </strong>
	  </td>
    <td align="left">
			<%= f.text_field :street, :value => @address.street %>
		</td>
	</tr>                
 	<tr>
   	<td align="right">
   		<strong>
   		  <span class="explain_text"><%= t '.postal_code' %> :</span>
   		</strong>
   	</td>
    <td align="left">
			<%= f.text_field :postal_code, :value => @address.postal_code %>
		</td>
	</tr>
  <tr>
		<td align="right">
	    <strong><span class="explain_text"><%= t '.city' %> :</span></strong>
	  </td>
    <td>
		  <span align="left">
		    <%= f.text_field :city, :value => @address.city %>
		  </span>
		</td>
	</tr>
  <tr>
    <td colspan="3">  
      <p class="bouton_probleme" align="right">
        <%= submit_tag t('.create'), :id => "submit_address", :class => "form_ajax" %>
      </p>
    </td>
  </tr>               
</table>
<% end %>